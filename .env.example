# Configuración de la base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/chile-compra
MONGODB_DB_NAME=chile-compra

# Configuración del servidor
PORT=3000
NODE_ENV=development

# API de Chile Compra
CHILE_COMPRA_API_URL=https://api.buscador.mercadopublico.cl
CHILE_COMPRA_API_KEY=your-chile-compra-api-key-here

# Configuración de email
EMAIL_SERVICE_URL=your-email-service-url-here
EMAIL_FROM=ofertas@chilecompra.local
EMAIL_TO=usuario@ejemplo.com

# Configuración de horario de ejecución
CRON_SCHEDULE=0 20 * * *